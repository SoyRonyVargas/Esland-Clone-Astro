---
interface Props {
    img: string
}

const { img } = Astro.props
---

<div 
    style={`background-image: url('${img}');`}
    class="bg-no-repeat bg-cover relative w-full max-w-[100vw] h-[100vh] md:h-[95vh] cp-v"
>
    <div class="flex justify-center items-center h-full w-full flex-col">
        <slot/>
    </div>
</div>