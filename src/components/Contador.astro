---
import { CountUp } from "../components/CountUp";
---

<section class="max-w-6xl mx-auto py-20 px-20">
  <h2
    class="text-3xl md:text-5xl lg:text-6xl font-tomaso text-center text-balance mb-10 lg:mb-20"
  >
    <!-- {i18n.ARCHIVO.COUNTER_TITLE} -->
    Los ESLAND En numeros
  </h2>

  <section class="grid md:grid-cols-3 items-center gap-x-10">
    <div class="flex flex-col justify-center items-center text-center">
      <span class="number text-7xl font-bold text-center">
        <CountUp client:visible initial={0} final={69.9} decimals={1} />M
      </span>
      <span class="uppercase mt-5 opacity-70"> de visualizaciones</span>
    </div>
    <div class="flex flex-col justify-center items-center text-center">
      <span class="number text-7xl font-bold text-center">
        <CountUp client:visible initial={0} final={227} />
      </span>
      <span class="uppercase mt-5 opacity-70"> Noticias en prensa</span>
    </div>
    <div class="flex flex-col justify-center items-center text-center">
      <span class="number text-7xl font-bold">
        <CountUp client:visible initial={0} final={3.2} decimals={1} /> M€
      </span>
      <span class="uppercase mt-5 opacity-70"> en medios ganados</span>
    </div>
  </section>
